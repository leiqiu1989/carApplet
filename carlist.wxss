.carlist {
  font-size: 14px;
  color: #1e2227;
}

.title {
  font-size: 14px;
  border-bottom: 1px solid #efefef;
  padding: 10px 0 10px 15px;
}

.content {
  background: #efeff4;
  padding: 10px;
}

.item-block {
  background: #fff;
  border-radius: 4px;
}

.item-block:not(:last-child) {
  margin-bottom: 10px;
}

.item-title {
  padding: 10px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.item-title-plate {
  font-weight: 700;
  font-size: 16px;
}

.item-content {
  padding: 10px;
  border-top: 1px solid #dfdfdf;
  position: relative;
}

.item-content-short {
  width: 50%;
}
.item-content-long{
  width: 100%;
}

.item-content-block {
  padding: 2px;
}

.item-content-track {
  border: 1px solid #4fa0fb;
  border-radius: 4px;
  text-align: center;
  padding: 5px;
  letter-spacing: 2px;
  position: absolute;
  top: 8px;
  right: 10px;
  font-size: 12px;
}

.track-icon {
  width: 24rpx;
  height: 24rpx;
  vertical-align: middle;
}

.status-icon {
  width: 16px;
  height: 16px;
  vertical-align: middle;
}

.status-text {
  display: inline-block;
  padding-left: 5px;
  position: relative;
  top: 1px;
}

.online {
  color: #1aad1a;
  padding: 2px 0;
}

.offline {
  color: #92979e;
  padding: 2px 0;
}
/*车列表-定位*/
.carlist-position{
  position: fixed;
  width: 240rpx;
  top: 187px;
  left: 10px;
  bottom: 190px;
  font-size: 14px;
  background: #FFFFFF;
  box-shadow: 0 2px 4px 0 rgba(127,127,127,0.44);
}
.carlist-trigon{
 width: 16px;
 height: 16px;
 position: absolute;
 right: 20px;
 top: 0px;
}
.carlist-position-title{
  position: fixed;
  width: 220rpx;
  top: 160px;
  left: 10px;
  font-size: 14px;
  background-color: #F3F6FA;
  padding: 10rpx 0;
  padding-left: 20rpx;
  color: #92979E;
  border-bottom: 1px solid #F3F6FA;
}
.carlist-position-content{
  width: 100%;
  height: 100%;
  overflow-y: scroll;
}
.carlist-position-item{
  padding: 15rpx 0;
  padding-left: 20rpx;
  font-size: 12px;
  color: #1E2227;
  text-align: left;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.carlist-position-item-active{
  background: #1b9ed4;
  color: white;
}
