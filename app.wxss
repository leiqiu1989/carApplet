/**app.wxss**/
@import "weui.wxss";
@import "report.wxss";
@import "carlist.wxss";
@import "map.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.bg-white {
  background: #fff;
}

.hide{
  display: none;
}

.padding-10 {
  padding: 10px;
}

.pad-top-10 {
  padding-top: 10px;
}

.pad-top-20 {
  padding-top: 20px;
}

.no-padding {
  padding: 0;
}

.ellipsis {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.align-center {
  text-align: center !important;
}
.align-left{
  text-align: left !important;
}

.margin-top-10 {
  margin-top: 10px;
}

.margin-right-10 {
  margin-right: 10px;
}

.margin-right-20 {
  margin-right: 20px;
}
.margin-left-20{
  margin-left: 20px;
}

.trackFilter .weui-flex__item {
  text-align: center;
}

.letter-space {
  letter-spacing: 2px;
}

.pull-left {
  float: left;
}

.pull-right {
  float: right;
}

.full {
  width: 100%;
  height: 100%;
}

.bold {
  font-weight: 700;
}

.large-size {
  font-size: 16px;
}

.small-size {
  font-size: 14px;
}

.smaller-size {
  font-size: 24rpx;
}

.border-bottom {
  border-bottom: 1px solid #dfdfdf;
}

.clearfix:after {
  visibility: hidden;
  display: block;
  font-size: 0;
  content: " ";
  clear: both;
  height: 0;
}

.text-align-right {
  text-align: right;
}

.text-align-center {
  text-align: center;
}

.flexbox {
  display: flex;
  flex-direction: column;
}

.grow {
  flex-grow: 1;
}

.button-hover[type=primary] {
  background: #4fa0fb;
  color: #fff;
}

button[type=primary] {
  background: #4fa0fb;
}