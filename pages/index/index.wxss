/**index.wxss**/

.weui-search-bar {
  border-bottom: 0;
}

.cover-list {
  background: #fff;
  width: 250px;
  height: 160px;
  position: fixed;
  top: 200px;
  border: 1px solid #dadada;
}

.cover-list  .list-item-content .list-item-block {
  margin: 10px 0;
}

.cover-list .trackHistory {
  color: #6ba9d7;
}

.list {
  font-size: 14px;
}

.list-item-title {
  padding: 10px;
}

.list-item-content {
  border: 1px solid #dadada;
  border-left: 0;
  border-right: 0;
  padding: 5px;
}

.list-item-content:last-child {
  border-bottom: 0;
}

.list-item-block {
  margin: 5px 0;
}

.list-item-block > label {
  width: 50%;
  display: inline-block;
}

.list-item-block > label.location {
  width: 80%;
  overflow: hidden;
  white-space: nowrapl;
  text-overflow: ellipsis;
}

.list-item-block > label.history {
  width: 20%;
  color: #1b9ed4;
}

.list-item-block> label.history > .navigator {
  padding: 2px;
  text-align: center;
}

.list-navigator-hover {
  color: #fff;
  background-color: green;
}

/*自定义navbar*/

.weui-navbar__item {
  color: #1e2227;
}

.weui-navbar__item.weui-bar__item_on {
  color: #4fa0fb;
}

.weui-navbar__slider {
  background-color: #4fa0fb;
}
/*车列表-定位*/
.carlist-position{
  position: fixed;
  width: 240rpx;
  top: 187px;
  left: 10px;
  bottom: 190px;
  font-size: 14px;
  background: #FFFFFF;
  box-shadow: 0 2px 4px 0 rgba(127,127,127,0.44);
  border-radius: 4px;
}
.carlist-trigon{
  width: 0;height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 20rpx solid #b3bcc7;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}
.carlist-trigon-transform{
  transform: rotate(-180deg);
}
.carlist-position-title{
  position: fixed;
  width: 220rpx;
  top: 160px;
  left: 10px;
  font-size: 14px;
  background: #F3F6FA;
  padding: 10rpx 0;
  padding-left: 20rpx;
  color: #92979E;
  border-bottom: 1px solid #F3F6FA;
}
.carlist-position-content{
  width: 100%;
  height: 100%;
  overflow-y: scroll;
}
.carlist-position-item{
  padding: 15rpx 0;
  padding-left: 20rpx;
  font-size: 12px;
  color: #1E2227;
  text-align: left;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.carlist-position-item-active{
  background: #1b9ed4;
  color: white;
}