.login {
  background: #fcf9fe;
  width: 100%;
  height: 100vh;
}

.logo {
  width: 128px;
  height: 128px;
}

.form {
  padding: 30px;
}

.icon {
  width: 20px;
  height: 20px;
  padding: 7px;
}

.form-item {
  background: #fff;
  border: 1px solid #dfdfdf;
  border-radius: 4px;
  height: 35px;
  margin-bottom: 20px;
}

.input-text {
  height: 35px;
  line-height: 35px;
  padding-left: 5px;
  font-size: 16px;
  width: calc(100vw - 105px);
}
