/* report common css*/

.report {
  background: #fcf9fe;
  width: 100%;
  height: 100vh;
}

.report .toolbar, .report .summary {
  border-top: 1px solid #dfdfdf;
  box-shadow: 0 1px 0 0 #dfdfdf;
  padding: 10px;
  background: #fff;
}

.toolbar {
  display: flex;
  align-items: center;
}

.report .summary {
  color: #ff7151;
  font-size: 16px;
}

.report .button {
  border-radius: 25px;
  text-align: center;
  width: 50px;
  padding: 5px;
  font-size: 14px;
  background-color: #f3f6fa;
  color: #1e2227;
  border: 1px solid #dfdfdf;
}

.report .date {
  width: calc(100% - 144px);
  text-align: center;
  line-height: 35px;
}

.report .tb-cell {
  width: 33.3%;
  text-align: center;
}

.report .unit {
  display: inline-block;
  font-size: 12px;
}

.report .mileage-list {
  height: calc(100vh - 182px);
}

.report .oil-list {
  height: calc(100vh - 285px);
}

.report .oil-item {
  background: #fff;
  padding: 10px;
  border-bottom: 1px solid #dfdfdf;
}

.report .item-block {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #1e2227;
  font-size: 14px;
  padding: 2px;
}

.report .list-table {
  font-size: 14px;
  background-color: #fff;
  padding: 5px 0;
  border-bottom: 1px solid #dfdfdf;
}

.report .list-row {
  padding: 2px 0 2px 10px;
}

.report .list-cell {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.report .list-cell-1 {
  width: 100%;
}

.report .list-cell-2 {
  width: 50%;
  float: left;
}

.report .list-cell-3 {
  width: calc(100% / 3);
  float: left;
}

.report .weui-media-box {
  padding: 10px;
}

.report .weui-loadmore__tips_in-line {
  background-color: #fcf9fe;
}
